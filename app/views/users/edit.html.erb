<h1>Editing User</h1>

<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :current_password,'oldPassword' %>
    <%= f.text_field :current_password %>
  </div>

  <div class="field">
    <%= f.label :password,'newPassword' %>
    <%= f.text_field :password %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation,'Confirm' %>
    <%= f.text_field :password_confirmation,:size=>40 %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


